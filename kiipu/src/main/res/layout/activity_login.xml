<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/activity_main"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center"
              android:fitsSystemWindows="true"
              tools:context="com.mycreat.kiipu.activity.MainActivity">

    <android.support.design.widget.TextInputLayout
            android:id="@+id/layout_username"
            app:passwordToggleDrawable="@drawable/ic_password_visibility_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
                android:id="@+id/editText_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLines="1"
                android:paddingTop="0dp"
                tools:text="liang"
                android:paddingLeft="20dp"
        />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
            android:id="@+id/layoutPassword"
            app:passwordToggleDrawable="@drawable/ic_password_visibility_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingTop="0dp"
                tools:text="*****"
                android:paddingLeft="20dp"
        />
    </android.support.design.widget.TextInputLayout>


    <Button android:id="@+id/bt_sina_auth" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:background="@color/google_green"
            android:text="微博登录" android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
    />
</LinearLayout>