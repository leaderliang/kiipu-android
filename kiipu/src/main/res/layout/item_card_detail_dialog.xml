<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >
    <data class="BookmarkDetailBinding">
        <import type="com.mycreat.kiipu.model.Bookmark" />
        <import type="com.mycreat.kiipu.view.bookmark.BookmarkTemplateWebVIew.OnLinkClickListener" />
        <variable name="bookmark" type="Bookmark" />
        <variable name="onLinkClickListener" type="OnLinkClickListener" />
    </data>

    <RelativeLayout
            android:id="@+id/rl_item_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        >
        <RelativeLayout
            android:id="@+id/title_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--<ImageView-->
                <!--android:id="@+id/iv_icon"-->
                <!--android:layout_width="@dimen/icdd_icon_size"-->
                <!--android:layout_height="@dimen/icdd_icon_size"-->
                <!--android:layout_marginLeft="@dimen/icdd_common_margin"-->
                <!--android:layout_marginRight="@dimen/icdd_common_margin"-->
                <!--android:layout_centerVertical="true"-->
                <!--app:imageUrl="@{bookmark.info.icon}"-->
                <!--/>-->

            <TextView

                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:maxLines="2"
                android:text="@{bookmark.info.title}"
                />

        </RelativeLayout>

        <LinearLayout
                android:id="@+id/introduce"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_below="@id/title_wrapper"
        >

            <ImageView
                    android:id="@+id/iv_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/icdd_common_margin"
                    android:layout_marginRight="@dimen/icdd_common_margin"
                    android:layout_marginTop="20dp"
                    android:scaleType="fitCenter"
                    app:imageUrl="@{bookmark.info.img}"
            />

            <TextView
                    android:id="@+id/tv_introduce"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/icdd_common_margin"
                    android:layout_marginRight="@dimen/icdd_common_margin"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:textColor="@color/color_4c3b3b"
                    android:text="@{bookmark.info.introduce}"
            />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ext_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/introduce"
            android:orientation="vertical"
            >
            <!-- url-->
            <TextView
                android:id="@+id/tv_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/icdd_common_margin"
                android:layout_marginRight="@dimen/icdd_common_margin"
                android:layout_marginTop="20dp"
                android:maxLines="2"
                android:visibility="gone"
                android:text="@{bookmark.info.url}"
                />

            <com.mycreat.kiipu.view.bookmark.BookmarkTemplateWebVIew
                android:id="@+id/wv_ext_detail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/icdd_tmpl_height"
                app:bookmark="@{bookmark}"
                app:onLinkClick="@{onLinkClickListener}"
                />
        </LinearLayout>



    </RelativeLayout>
</layout>