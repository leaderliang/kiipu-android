<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="5dp"
        android:clickable="true"
>

    <!--
        card_view:cardUseCompatPadding="true"  // 阴影Padding 让CardView在不同系统中使用相同的padding值
        card_view:cardPreventCornerOverlap="true" // 圆角覆盖  默认 true
        card_view:cardCornerRadius="30dp"   //圆角 角度
        card_view:cardElevation="5dp    // 阴影的大小，值越大间距越大
    -->

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
    >
        <ImageView
                android:id="@+id/iv_item_header"
                android:layout_width="match_parent"
                android:layout_height="100dp"
        />
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
        >

            <ImageView android:id="@+id/iv_icon"
                       android:layout_width="16dp"
                       android:layout_height="16dp"
                       android:background="@color/colorPrimaryDark"
                       android:layout_marginLeft="10dp"
            />

            <TextView

                    android:id="@+id/tv_title_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="大赛框架发送单卡囧到经发局空皇甫看阿訇扥老空皇甫看阿訇扥老"
                    android:paddingLeft="10dp"
                    android:layout_toRightOf="@+id/iv_icon"
                    android:maxLines="2"
            />
            <!--<TextView-->
            <!--android:id="@+id/tv_title_bottom"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="大赛框架发送单风看啊丧胆阿恐慌看基佬阿囧带肯借啊监控皇甫看阿訇扥老"-->
            <!--android:paddingLeft="10dp"-->
            <!--android:layout_below="@+id/iv_icon"-->
            <!--android:maxLines="1"-->
            <!--android:ellipsize="end"-->
            <!--/>-->
        </RelativeLayout>
        <TextView
                android:id="@+id/tv_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="www.zhihu.com"
                android:paddingLeft="8dp"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/darker_gray"
        />
    </LinearLayout>
</android.support.v7.widget.CardView>