<?xml version="1.0" encoding="utf-8"?>
<com.mycreat.kiipu.view.RequestErrorLayout android:id="@+id/ly_main_actionbar"
                                           xmlns:android="http://schemas.android.com/apk/res/android"
                                           android:layout_width="match_parent"
                                           android:layout_height="match_parent"
                                           android:gravity="center">
    <ImageView
            android:id="@+id/request_error_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/empty_icon"/>

    <TextView
            android:id="@+id/request_error_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/request_error_image"
            android:gravity="center"
            android:textColor="@color/color_c5c5c5"
            android:textSize="14sp"
            android:layout_marginTop="18dp"
    />

</com.mycreat.kiipu.view.RequestErrorLayout>
